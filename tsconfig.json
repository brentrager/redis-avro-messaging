{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "strictNullChecks": true,
        "noUnusedParameters": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
    },
    "include": [
        "index.ts",
        "lib/**/*",
        "schemas/*.json"
    ]
}